blue = #4682b4

.reveal
  p, ol, ul, li, blockquote
    line-height 1.25em
  p, ol, ul, li, blockquote, pre
    margin-top .75em
    margin-bottom .75em
  h1, h2, h3, h4, h5, h6
    margin-top .25em
    margin-bottom .75em

  h1.demo, h2.demo, h3.demo, h4.demo, h5.demo, h6.demo
    margin-top -0.80em
  ul
    list-style-type circle
  pre
    code
      padding 1em
      font-size 0.7em
      line-height: 1.2em
      word-wrap normal
      &::selection,
      ::selection
        background-color #000
        color blue
      &:focus
        outline none
  blockquote
    border-left .25em solid blue
    box-shadow none
    padding 0 1em
    text-align left
    &:before,
    &:after
      content ''
  iframe.blocks, iframe.demo
    width 100%
    height 650px
    margin-left -30px
  section
    img
      border none
      box-shadow none

  #title
    h1, h2, h3, h4, h5, h6
      // text-transform none
      font-family 'Helvetica Neue', sans-serif
      // font-weight lighter
      letter-spacing -.05em
      margin 0
      // margin-top -0.5em
    // h3
      // margin 1.5em 0 1em
    h1
      font-size 3.2em
    .email
      margin-top -0.8em
  img.demo
    max-height 500px

  #comparisonTable
    font-size 0.5em
    td
      width 33%
  .small
    font-size 80%
  .tiny
    font-size 60%
  .bottom
    margin-top 65%

  .authors
    font-size 70%

  .left
    left:-8.33%
    text-align: left
    float: left
    width:50%
    z-index:-10


  .right
    left:31.25%
    top: 75px
    float: right
    // text-align: right
    z-index:-10
    width:50%


  #handsOn
    pre
      width: 70%
      font-size: 0.5em
      float: left
    div.target
      margin: 20px
      width: 25%
      float: left
      font: 10px sans-serif
      rect
        fill: steelblue
      circle
        opacity: 0.3
      path.line
        fill: none
        stroke: #666
        stroke-width: 1.5px
      path.area
        fill: #e7e7e7
      .axis
        shape-rendering: crispEdges
      .x.axis line
        stroke: #bbb
      .x.axis .minor
        stroke-opacity: .5
      .x.axis path
        fill: none
      .y.axis line, .y.axis path
        fill: none
        stroke: #333
    button.execute
      clear: both
      font-size: 0.8em

    div.followLink
      font-size: 0.6em


  .contactInfo
    text-align: right
    a
      font-size: 0.6em

  .red
    color: #e80000;

  img.side
    float:left;
    width:45%;
    padding: 0 5px 0 5px;

  .clear
    clear:both;

  .logo
    height: 80px;

.flex
    display:flex
    width: 100%
    flex-wrap: wrap

    *
      margin: auto

    .quarter
      width: 22%
      margin-right: 1%
      margin-left: 1%

    .third
      width: 30%
      margin-right: 1.5%
      margin-left: 1.5%
    .half
      width: 45%
      // margin-right: 5%
      margin: auto

    .twothirds
      width: 60%
      margin-right: 3%
      margin-left: 3%

    .flex1
      flex:1
    .flex2
      flex:2
    .flex3
      flex:3
    .flex4
      flex:4    




#munznerpreferencechart
    color: white
    font-size: 0.6em
    .line
      stroke: #4A90E2
      stroke-width: 25
      stroke-opacity: 0.30
      fill: none
    .box
      // text
      //   opacity: 0
      rect
        fill-opacity: 0.75
    .box:hover text
      opacity: 1
    .mainArea.selected
      .line.selected
        opacity: 0.9
      .line
        opacity: 0.1
      .box
        opacity: 0.1
      .box.selected
        opacity: 0.9
    .box text
      pointer-events: none
      font-size: 14pt
    .axis path, .axis line
      fill: none
      /*stroke: #ccc*/
      shape-rendering: crispEdges
    .y.axis line
      stroke: white
    text
      font-size: 22pt

  .anscombeTable
    width: 70%
    float: left
    font-family: sans-serif
    td:nth-child({odd})
      background-color: #eee
    td:nth-child({even})
      background-color: #ddd
    td
      font-size: 16pt
      text-align: right
    th
      font-size: 20pt
      text-align: center
    tr:nth-child({2})
      td
        text-align: center

  .anscombeResult
    width: 25%
    float: left
    font-family: sans-serif
    td:nth-child({1})
      text-align: left
    td
      font-size: 12pt
      text-align: right
    th
      font-size: 18pt
      text-align: center
